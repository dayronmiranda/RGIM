{
  "name": "rgim-website",
  "version": "2.0.0",
  "description": "RGIM - Compras internacionales y envíos desde Panamá",
  "main": "index.html",
  "scripts": {
    "build-css": "tailwindcss -i ./rgim-website/src/assets/css/input.css -o ./rgim-website/src/assets/css/styles.css --watch",
    "build-css-prod": "tailwindcss -i ./rgim-website/src/assets/css/input.css -o ./rgim-website/src/assets/css/styles.css --minify",
    "dev": "npm run build-css",
    "build": "node rgim-website/tools/build.js",
    "optimize-images": "node rgim-website/tools/optimize-images.js",
    "start": "node rgim-website/tools/server.js",
    "serve": "node rgim-website/tools/server.js",
    "serve-http": "npx http-server rgim-website/dist -p 8000 -c-1",
    "serve-dev": "npx http-server rgim-website/public -p 8000 -c-1"
  },
  "keywords": [
    "ecommerce",
    "international-shipping",
    "panama",
    "latin-america",
    "caribbean"
  ],
  "author": "RGIM",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "sharp": "^0.33.0",
    "http-server": "^14.1.1"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rgim/website.git"
  },
  "homepage": "https://rgim.com"
}